<body style="background-color:rgba(255, 191, 0, 0.816);"></body>
<h1 class="text-center">Cab Details</h1>
<div class="container">
    <table class="table table-striped mt-4">
        <tr>
            <th>Id</th>
            <th>Cab Name</th>
            <th>Cab Type</th>
            <th>Cab Capacity</th>
            <th>Cab Description</th>
            <th>Add Driver</th>
            <th>Action</th>
        </tr>
        {{#each data}}
        <tr>
            <td>{{this.dataValues.id}}</td>
            <td>{{this.dataValues.cabName}}</td>
            <td>{{this.dataValues.cabType}}</td>
            <td>{{this.dataValues.cabCapacity}}</td>
            <td>{{this.dataValues.cabDescription}}</td>
             <td>{{this.dataValues.adddriver}}</td>
            <td>
                <a href="/updatecab/{{this.dataValues.id}}">Edit</a> |
                <a href="/deletecab/{{this.dataValues.id}}" class="text-danger" onclick="return confirm('Are you sure you want to delete this')">Delete</a>
            </td>
        </tr>
        {{/each}}
    </table>
    <p class="text-end">You are logged in as: 
        <b>{{identity.firstName}} {{identity.lastName}}</b>
    </p>
</div>
<style>
   body{ width: 100%;
  padding: 12px 20px;
  margin: 8px 0;
  display: inline-block;
  border: 1px solid #ccc;
  box-sizing: border-box;
}

</style>