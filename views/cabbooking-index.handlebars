<body style="background-color:rgba(255, 191, 0, 0.816);"></body>
<h1 class="text-center">Booking Details</h1>
<div class="container">
    {{!-- <a href="/create" class="btn btn-primary">+ New </a> --}}
    <table class="table table-striped mt-4">
        <tr>
            
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Pickup</th>
             <th>Drop off</th>
              <th>Passengers</th>
               <th>Pickup Time</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Booking Date</th>
                <th>Cab</th>
          
        </tr>
        {{#each data}}
        <tr>
          
            <td>{{this.dataValues.firstName}}</td>
            <td>{{this.dataValues.lastName}}</td>
            <td>{{this.dataValues.address}}</td>
            <td>{{this.dataValues.pickup}}</td>
             <td>{{this.dataValues.dropoff}}</td>
              <td>{{this.dataValues.passengers}}</td>
                <td>{{this.dataValues.pickuptime}}</td>
               <td>{{this.dataValues.email}}</td>
                <td>{{this.dataValues.phone}}</td>
                 <td>{{this.dataValues.bookingdate}}</td>
                 <td>{{this.dataValues.choosecab}}</td>
            <td>
                <a href="/updatecabbooking/{{this.dataValues.id}}">Edit</a> |
                {{!-- <a href="/deletecab/{{this.dataValues.id}}" class="text-danger" onclick="return confirm('Are you sure you want to delete this')">Delete</a> --}}
            </td>
        </tr>
        {{/each}}
    </table>
    <p class="text-end">You are logged in as: 
        <b>{{identity.firstName}} {{identity.lastName}}</b>
    </p>
</div>
<style>
   body{ width: 100%;
  padding: 12px 20px;
  margin: 8px 0;
  display: inline-block;
  border: 1px solid #ccc;
  box-sizing: border-box;
}

</style>